<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#3DCFE8"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/lucky_number_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3DCFE8"
        android:text="Lucky Number"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/location_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3DCFE8"
        android:text="Location"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/dob_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3DCFE8"
        android:text="Date Of Birth"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/team_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3DCFE8"
        android:text="Team"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/team_list_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3DCFE8"
        android:text="Team List"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/add_members_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3DCFE8"
        android:text="Add Members"
        android:textAllCaps="false" />

</LinearLayout>